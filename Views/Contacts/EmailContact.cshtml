@model EmailContactViewModel


<h1 class="mt-5">Email Contact: @Model.EmailData!.FirstName @Model.EmailData.LastName</h1>
<div class="p-2">
    <form asp-action="EmailContact" asp-controller="Contacts" method="post">
        <input type="hidden" asp-for="@Model.EmailData.GroupName" />
        <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
            <div class="col col-md-12">
                <label asp-for="@Model.EmailData.EmailAddress" class="form-label">To:</label>
                <textarea type="email" readonly class="form-control" asp-for="@Model.EmailData.EmailAddress" rows="3"></textarea>
            </div>
        </div>
        <div class="row row-cols-1 g-3">
            <div class="col">
                <label asp-for="@Model.EmailData.EmailSubject" class="form-label">Subject:</label>
                <input type="text" class="form-control" asp-for="@Model.EmailData.EmailSubject" />
            </div>
            <div class="col">
                <label asp-for="@Model.EmailData.EmailBody" class="form-label">Message:</label>
                <textarea class="form-control" rows=10 asp-for="@Model.EmailData.EmailBody" required></textarea>
            </div>
            <div class="col text-end">
                <button class="btn btn-primary rounded-pill btnlinks" type="submit">Send</button>
            </div>
        </div>
    </form>
</div>